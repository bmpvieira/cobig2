!!!
html(lang='en', ng-app="app")
  head
    meta(charset='utf8')
    base(href='/')
    title #{title_short} | #{title}
    block css
      link(rel='stylesheet', href='//netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/css/bootstrap.no-icons.min.css')
      link(rel='stylesheet', href='//netdna.bootstrapcdn.com/font-awesome/3.0.2/css/font-awesome.css')
      link(rel='stylesheet', href='css/app.css')

  body
    block menu
      include partials/menu

    .center-outer
      .center-inner
        block content
          div(ng-view)

    block js
      != js('base64') //- base64 codec
      != js('/components/marked/lib/marked.js') //- markdown codec
      script(src='//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js')
      script(src='//netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/js/bootstrap.min.js')
      script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.1.1/angular.min.js')
      script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.1.1/angular-resource.min.js')
      script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.1.1/angular-sanitize.min.js')
      != js('app')
      != js('globals')
      != js('services')
      != js('directives')
      != js('controllers')
