!!!
html(lang='en', ng-app="app")
  head
    meta(charset='utf8')
    base(href='/')
    title #{title_short} | #{title}
    block css
      link(rel='stylesheet', href='//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css')
      link(rel='stylesheet', href='//netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.min.css')
      link(rel='stylesheet', href='css/app.css')

    //- HACK Enable Twitter widget
    script
      !function(d,s,id) {
        var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';
        if(!d.getElementById(id)) {
          js=d.createElement(s);
          js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);
        }
      }(document,"script","twitter-wjs");

    include partials/ganalytics

  body
    block menu
      include partials/menu

    .center-outer
      .center-inner
        block content
          div(ng-view)

    block js
      //- != js('base64') //- base64 codec
      //- != js('/components/marked/lib/marked.js') //- markdown codec
      //- script(scr='//d2i6acgkizgokx.cloudfront.net/js/marked.09585bb19d4f250fa8ea03c9879503a0.min.js')
      != js('marked.09585bb19d4f250fa8ea03c9879503a0.min.js')
      script(src='//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js')
      script(src='//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js')
      script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.1.1/angular.min.js')
      script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.1.1/angular-resource.min.js')
      script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.1.1/angular-sanitize.min.js')
      != js('app')
      != js('globals')
      != js('services')
      != js('directives')
      != js('controllers')
