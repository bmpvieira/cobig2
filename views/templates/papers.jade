.container-fluid
  .row-fluid
    .content(ng-class='{"app-hide": !papers, "app-show": papers}')
      input.input-medium.search-query.pull-right(type='text', ng-model='search', placeholder='Search in all fields...')
      br
      .page-header
        h1 Publications
      .papers
        ul(ng-repeat='paper in papers | orderBy: "-year" | filter: search ')
          li
            span(ng-repeat='author in paper.authors') {{author.surname}} {{author.initials}}{{$last && ': ' || ', '}}
            a(ng-href='{{paper.url}}') {{paper.title}} 
            em {{paper.publisher}} 
            | {{paper.year}}, 
            strong {{paper.volume}}.{{paper.issue}}
            | :{{paper.pages}}.
            //- p {{paper.abstract}}
